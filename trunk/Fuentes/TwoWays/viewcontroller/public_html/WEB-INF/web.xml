<?xml version = '1.0' encoding = 'windows-1252'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <description>TwoWays Application</description>
  <servlet>
        <servlet-name>Log4jSetupServlet</servlet-name>
        <servlet-class>com.twoways.util.Log4jSetupServlet</servlet-class>
        <init-param>
            <param-name>props</param-name>
            <param-value>/WEB-INF/log4j.xml</param-value>
        </init-param>
        <init-param>
            <param-name>watch</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>debug_mode</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
     <servlet>
  <servlet-name>dwr-invoker</servlet-name>
  <display-name>DWR Servlet</display-name>
  <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
  <init-param>
     <param-name>debug</param-name>
     <param-value>true</param-value>
  </init-param>
</servlet>
    <servlet>
        <servlet-name>AbmClientesServlet</servlet-name>
        <servlet-class>com.twoways.view.servlets.AbmClientesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AbmUsuariosServlet</servlet-name>
        <servlet-class>com.twoways.view.servlets.AbmUsuariosServlet</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.twoways.view.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AbmEmpleadosServlet</servlet-name>
        <servlet-class>com.twoways.view.servlets.AbmEmpleadosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AbmClientesServlet</servlet-name>
        <url-pattern>/clientes</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AbmTarifasServlet</servlet-name>
        <servlet-class>com.twoways.view.servlets.AbmTarifasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AbmTarifasServlet</servlet-name>
        <url-pattern>/tarifas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AbmUsuariosServlet</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AbmEmpleadosServlet</servlet-name>
        <url-pattern>/empleados</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>35</session-timeout>
    </session-config>
<servlet-mapping>
  <servlet-name>dwr-invoker</servlet-name>
  <url-pattern>/dwr/*</url-pattern>
</servlet-mapping>

    <mime-mapping>
        <extension>html</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>txt</extension>
        <mime-type>text/plain</mime-type>
    </mime-mapping>
</web-app>
